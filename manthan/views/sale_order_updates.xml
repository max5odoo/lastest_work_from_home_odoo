<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sales_order_update_view" model="ir.ui.view">
        <field name="name">sales.order.update.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='campaign_id']" position="after">


                <filter string="is dt " name="is_dt" domain="[('is_dt', '=', True)]"/>


            </xpath>


        </field>
    </record>
    <record id="sales_order_product_catalog_view" model="ir.ui.view">
        <field name="name">sales.order.product.catalog.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">


                <field name="product_catalog_id"/>


            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">


                <field name="product_catelog_product_line_id"/>


            </xpath>
            <xpath expr="//page[@name='order_lines']//tree//field[@name='product_id']" position="before">


                <field name="product_catelog_product_line_id"/>
                <field name="description"/>


            </xpath>


        </field>
    </record>


</odoo>